{% extends "app.html.twig" %}

{% set title = '記事編集' %}

{% block content %}

  <div class="container mt-3">
    <div class="row">
      <div class="col">

        {# エラーメッセージを表示 #}
        {% if error_message | length > 0 %}
          <div class="alert alert-danger" role="alert">
            {{error_message}}<br>
            {% if articleErr.submitArr.title | length > 0 %}・{{articleErr.submitArr.title}}<br>{% endif %}
            {% if articleErr.submitArr.content | length > 0 %}・{{articleErr.submitArr.content}}<br>{% endif %}
            {% if articleErr.imageArr.size | length > 0 %}・{{articleErr.imageArr.size}}<br>{% endif %}
            {% if articleErr.imageArr.extension | length > 0 %}・{{articleErr.imageArr.extension}}<br>{% endif %}
            {% if articleErr.imageArr.name | length > 0 %}・{{articleErr.imageArr.name}}<br>{% endif %}
          </div>
        {% endif %}

        <form method="post" action="list.php" enctype="multipart/form-data">
          {% include 'form.html.twig' %}
          <div class="text-center">
            <button type="submit" class="btn btn-primary" name="edit" value="edit">編集する</button>
          </div>
        </form>

      </div>
    </div>
  </div>

{% endblock %}
